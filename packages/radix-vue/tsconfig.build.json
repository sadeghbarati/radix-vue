{
  // This tsconfig is for development. Allowing *.story.vue, and __test__/*.vue to have types support
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/story",
    "src/test"
  ],
  "compilerOptions": {
    "paths": {
      "@/*": ["src/*"],
      "@iconify/vue": ["../../.histoire/node_modules/@iconify/vue"]
    },
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./temp",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "vueCompilerOptions": {
    "skipTemplateCodegen": true
  }
}
